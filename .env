# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security
SECRET_KEY=your-super-secret-key-change-in-production
CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False  # Set to True in production
REMEMBER_COOKIE_SECURE=False  # Set to True in production

# Database
DATABASE_URL=sqlite:///app.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Redis (for rate limiting and caching in production)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200/day;50/hour

# Cache
CACHE_TYPE=simple
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# LLM API Keys (replace with actual keys in production)
CLAUDE_API_KEY=your-claude-api-key
SONNET_API_KEY=your-sonnet-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/innoteam.log

# File Storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size

# CORS
CORS_HEADERS=Content-Type
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days
